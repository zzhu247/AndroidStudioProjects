<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#FFFFFF"
    tools:context=".AddToWishlist">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="18dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Hamburger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hamburger" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="Title"
        android:fontFamily="@font/quicksand_medium"
        android:text="Add to Wishlist"
        android:textColor="#1F1F1F"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <TextView
        android:id="@+id/button_save"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/greenbutton"
        android:fontFamily="@font/quicksand_medium"
        android:paddingTop="5dp"
        android:text="Add"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="325dp"
        android:text="Item"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="96dp" />

    <EditText
        android:id="@+id/item_price"
        android:layout_width="365dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:accessibilityHeading="false"
        android:autofillHints="20.00"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@id/textView9"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Enter amount"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/item_price3"
        android:layout_width="365dp"
        android:layout_height="55dp"
        android:accessibilityHeading="false"
        android:autofillHints="20.00"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@id/textView9"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Enter item name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/item_price2"
        android:layout_width="365dp"
        android:layout_height="55dp"
        android:accessibilityHeading="false"
        android:autofillHints="20.00"
        android:background="@drawable/input_bg"
        android:ems="10"
        android:inputType="number"
        android:labelFor="@id/textView9"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Enter brand name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="232dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="39dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="341dp"
        android:text="Cost"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="328dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="76dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="304dp"
        android:text="Brand"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="195dp" />

